<h1>Login</h1>

<%= form_for '/login' do |f| %>
  <div class='form-group'>
    <%= f.label :email%>
    <%= f.email_field :email %>
  </div>

  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'Login', class: 'btn btn-primary' %>
<% end %>